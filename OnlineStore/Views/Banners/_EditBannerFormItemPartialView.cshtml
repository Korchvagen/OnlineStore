@model OnlineStore.BLL.ViewModels.Banner.EditBannerViewModel

<form class="editBannerForm">
    <input class="bannerId" type="hidden" asp-for="Id" value="@Model.Id" />
    <div class="form-groups">
        <div class="form-group">
            <label asp-for="NewImage" class="control-label">New image</label>
            <input name="NewImage" id="productImage" type="file" asp-for="NewImage" class="form-control" />
            <span asp-validation-for="NewImage" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewLink" class="control-label"></label>
            <input id="bannerLink" asp-for="NewLink" value="@Model.NewLink" class="form-control" />
            <span asp-validation-for="NewLink" class="text-danger"></span>
        </div>
    </div>
    <div class="buttons-container">
        <button class="btn btn-dark deleteBannerBtn" value="@Model.Id">Delete</button>
        <button class="btn btn-dark editBannerBtn">Edit</button>
    </div>
</form>