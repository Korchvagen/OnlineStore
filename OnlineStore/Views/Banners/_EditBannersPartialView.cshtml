@model IEnumerable<OnlineStore.BLL.ViewModels.Banner.BannerViewModel>

<div id="editBannersContainer">
    @foreach (var item in Model)
    {
        <div class="editBannersContainer__item">
            <div class="image-container">
                <p>Choosen image: <b>@item.FileName</b></p>
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)" alt="Banner image" />
            </div>
            <div class="form-container">
                @Html.Partial("_EditBannerFormItemPartialView", item.EditBannerViewModel)
            </div>
        </div>
    }
    <div class="modal-footer">
        <button id="cancelCreateBannerBtn" class="btn btn-dark">Cancel</button>
        <button id="createBannerFormBtn" class="btn btn-dark">Create new banner</button>
        <button id="closeModalBtn" class="btn btn-dark">Close</button>
    </div>
</div>